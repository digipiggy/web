{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "vuejs: chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}/app/src",
        "breakOnLoad": true,
        "pathMapping": {
          "/_karma_webpack_": "${workspaceFolder}/app/src"
        },
        "sourceMapPathOverrides": {
          "webpack:/*": "${webRoot}/*",
          "/./*": "${webRoot}/*",
          "/src/*": "${webRoot}/*",
          "/*": "*",
          "/./~/*": "${webRoot}/app/node_modules/*"
        },
        "preLaunchTask": "vuejs: start"
      }
    ]
  }